<!-- Include the header partial -->
<% include ../_header %>

<section class="app-brief" id="signup">
    <div class="container subpage">
        <div class='row'>
            <div class="page-title">
                Create your account
            </div>
        </div>
        <div class='row'>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-3 step current"><div>1</div></div>
                    <div class="col-lg-3 step"><div>2</div></div>
                    <div class="col-lg-3 step"><div>3</div></div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="row">
                    <h3>Quickly sign up to your matches</h3>
                    <div class="align-center">
                        <br />
                        <div class="btn btn-default standard-button signin-linked-button">
                            <i class="fa fa-linkedin fa-lg"></i>
                            Sign In with Linkedin
                        </div>
                        <br /><br />
                        <h3><b>- Or -</b></h3>
                    </div>
                </div>
                <div class="col-lg-12">
                    <form rel="form" method="POST" id="signup_1_form">
                        <div class="form-group">
                            <label>Enter Your Email Address:</label>
                            <input type="email" name="email" id="email" class="form-control" required=""/>
                            <span class="error"></span>
                        </div>
                        <div class="form-group">
                            <label>Confirm Your Email Address:</label>
                            <input type="email" name="confirm-email" id="confirm-email" class="form-control" required=""/>
                            <span class="error"></span>
                        </div>
                        <div class="form-group">
                            <label>Enter Your Password:</label>
                            <input type="password" name="password" id="password" class="form-control" required=""/>
                            <span class="error"></span>
                        </div>
                        <div class="form-group align-center">
                            <a class="btn standard-nocolor-button" onclick="clearForm('#signup_1_form')">Clear form</a>
                            <button type="button" onclick="signup1()" class="btn btn-default standard-button">Next</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    	<!-- /END ROW -->
    </div>
    <!-- /END CONTAINER -->
</section>

<!-- Include the footer partial -->
<% include ../_footer %>