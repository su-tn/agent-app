<!-- Include the header partial -->
<% include ../_header %>

<section class="app-brief" id="signup">
    <div class="container subpage">
        <div class='row'>
            <div class="page-title">
                Find an Agent
            </div>
        </div>
        <div class='row'>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-3 step active"><div>1</div></div>
                    <div class="col-lg-3 step current"><div>2</div></div>
                    <div class="col-lg-3 step"><div>3</div></div>
                </div>
                <div class="row">
                    <h3>Just a little more information to help you find the perfect agent:</h3>
                </div>
                <div class="col-lg-12">
                    <div class="error"><%= (typeof error != 'undefined') ? error : ''%></div>
                    <form rel="form" method="POST" id="signup_2_form">
                        <div class="form-group">
                            <label>Are you a buyer or a seller?</label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="user_type" value="1" checked=""> Buyer
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="user_type" value="2"> Seller
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label><%= (user.get('userType') == 1) ? 'How soon are you looking to buy?' : 'How soon would you like to sell your property?' %></label>
                            
                            <div class="radio">
                                <label>
                                    <input type="radio" name="timeframe" value="1" checked="">
                                    ready to make offers
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="timeframe" value="2">
                                    3-6 months
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="timeframe" value="3">
                                    6-12 months
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="timeframe" value="4">
                                    over 12 months
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label><%= (user.get('userType') == 1) ? 'What price range of properties are you interested in?' : 'What is your asking price?' %></label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="price_range" value="1" checked="">
                                    less than $500,000
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="price_range" value="2">
                                    $500,000 to $750,000
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="price_range" value="3">
                                    $750,000 to $1,000,000
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="price_range" value="4">
                                    $1,000,000 to $5,000,000
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="price_range" value="5">
                                    over $5,000,000
                                </label>
                            </div>
                        </div>
                        <div class="form-group align-center">
                            <a class="btn standard-nocolor-button" onclick="clearForm('#signup_1_form')">Clear form</a>
                            <button type="submit" class="btn btn-default standard-button">Next</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    	<!-- /END ROW -->
    </div>
    <!-- /END CONTAINER -->
</section>

<!-- Include the footer partial -->
<% include ../_footer %>