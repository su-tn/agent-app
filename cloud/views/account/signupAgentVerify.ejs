<!-- Include the header partial -->
<% include ../_header %>

<section class="app-brief" id="signup">
    <div class="container subpage">
        <div class='row'>
            <div class="page-title">
                Create your account
            </div>
        </div>
        <div class='row'>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-3 step current"><div>1</div></div>
                    <div class="col-lg-3 step"><div>2</div></div>
                    <div class="col-lg-3 step"><div>3</div></div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="">
                    <h3 class="signup-title">Quickly sign up to your matches</h3>
                    <form rel="form" method="POST" id="signup_agent_verify_form">
                        <div class="form-group">
                            <label>Enter Your Agent ID Number:</label>
                            <input type="text" name="agent_id" id="agent-id" class="form-control" required=""/>
                            <span class="error"></span>
                        </div>
                        <div class="form-group">
                            <label>Enter Your Email Address:</label>
                            <input type="email" name="email" id="email" class="form-control" required=""/>
                            <span class="error"></span>
                        </div>
                        <div class="form-group">
                            <label>Confirm Your Email Address:</label>
                            <input type="email" name="confirm-email" id="confirm-email" class="form-control" required=""/>
                            <span class="error"></span>
                        </div>
                        <div class="form-group">
                            <label>Enter Your Password:</label>
                            <input type="password" name="password" id="password" class="form-control" required=""/>
                            <span class="error"></span>
                        </div>
                        <div class="form-group align-center">
                            <a class="btn standard-nocolor-button" onclick="clearForm('#signup_agent_verify_form')">Clear form</a>
                            <button type="button" onclick="signupAgentVerify()" class="btn btn-default standard-button">Next</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    	<!-- /END ROW -->
    </div>
    <!-- /END CONTAINER -->
</section>

<!-- Include the footer partial -->
<% include ../_footer %>