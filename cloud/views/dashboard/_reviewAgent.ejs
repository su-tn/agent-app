<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <div class="row">
                <div class="col-lg-12">
                
                    <form id="review_agent_form">
                        <h3 class="modal-heading">Review <%= (agent.firstName || '') + ' ' + (agent.lastName || '') %></h3>
                        <div class="modal-avatar">
                            <div class="row">
                                <div class="col-md-3">
                                    <% if(agent.image){ %>
                                    <img src="<%= agent.image.url %>" width="90" />
                                    <% } else { %>
                                    <img src="/images/user-default.png" width="90">
                                    <% } %>
                                </div>
                                <div class="col-md-9 summary">
                                    <p>
                                    Our of 5 stars, how would you rate your overall experience with <%= (agent.firstName || '') + ' ' + (agent.lastName || '') %>?
                                    </p>
                                    <div class="rating">
                                        <% var rating = agent.rating || 0 %>
                                        <input type="radio" id="rating-5" name="rating" value="5" <%= (rating == 5) ? 'checked' : ''%>>
                                        <label for="rating-5" class="glyphicon glyphicon-star">5</label>
                                        <input type="radio" id="rating-4" name="rating" value="4" <%= (rating == 4) ? 'checked' : ''%>>
                                        <label for="rating-4" class="glyphicon glyphicon-star">4</label>
                                        <input type="radio" id="rating-3" name="rating" value="3" <%= (rating == 3) ? 'checked' : ''%>>
                                        <label for="rating-3" class="glyphicon glyphicon-star">3</label>
                                        <input type="radio" id="rating-2" name="rating" value="2" <%= (rating == 2) ? 'checked' : ''%>>
                                        <label for="rating-2" class="glyphicon glyphicon-star">2</label>
                                        <input type="radio" id="rating-1" name="rating" value="1" <%= (rating == 1) ? 'checked' : ''%>>
                                        <label for="rating-1" class="glyphicon glyphicon-star">1</label>
                                        
                                        <input type="radio" id="rating-0" name="rating" value="0" class="star-cb-clear">
                                        <label for="rating-0" class="glyphicon glyphicon-star">0</label>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p class="description">
                            Please provide additional comments on your experience with <%= (agent.firstName || '') + ' ' + (agent.lastName || '') %>:
                        </p>
                        <input type="hidden" name="agentId" value="<%= agent.objectId %>" />
                    
                        <textarea id="comment" class="form-control" name="comment" rows="10" placeholder="Type comments here" required=""></textarea>
                        <br />
                        <a href="#" class="btn standard-button view-proposal-button" onclick="submitReviewAgent()">
                            SUBMIT REVIEW
                        </a>
                    </form>
                </div>
            </div>
        
        </div>
    </div>
</div>